{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,                // Generate declaration maps
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",                                    // Include all files under `src`
  ],
  "exclude": [
    "node_modules",                                // Exclude node_modules folder
    "dist"                                         // Exclude dist folder
  ]
}
